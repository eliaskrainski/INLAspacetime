Package: INLAspacetime
Type: Package
Title: Spatial and Spatio-Temporal Models using 'INLA'
Version: 0.1.5
Authors@R: c(
  person("Elias Teixeira", "Krainski", email = "eliaskrainski@gmail.com",
         role = c("cre", "aut", "cph"), 
